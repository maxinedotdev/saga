{
  "name": "@maxinedotdev/saga",
  "version": "0.2.0",
  "description": "A TypeScript MCP server for document management and semantic search with embeddings, featuring web crawling, multiple AI providers, and intelligent chunking",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "saga": "dist/server.js",
    "saga-embeddings": "dist/embedding-cli.js"
  },
  "homepage": "https://github.com/maxinedotdev/saga#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxinedotdev/saga.git"
  },
  "bugs": {
    "url": "https://github.com/maxinedotdev/saga/issues"
  },
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "start": "tsx src/server.ts",
    "dev": "fastmcp dev src/server.ts",
    "dev:direct": "npx tsx src/server.ts",
    "dev:build": "npm run build && node dist/server.js",
    "embeddings:check": "node dist/embedding-cli.js",
    "inspect": "npx fastmcp inspect src/server.ts",
    "promote:staging": "./promote-to-staging.sh",
    "switch:develop": "./switch-to-develop.sh",
    "test": "npm run test:all",
    "test:unit": "tsx src/vector-db/__tests__/vector-db.test.ts",
    "test:integration": "tsx src/__tests__/integration.test.ts",
    "test:benchmark": "tsx src/__tests__/benchmark.test.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "search",
    "embeddings"
  ],
  "author": "maxinedotdev",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "shx": "^0.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@lancedb/lancedb": "^0.23.0",
    "@modelcontextprotocol/sdk": "^1.12.3",
    "@types/node": "^25.0.10",
    "@xenova/transformers": "^2.17.2",
    "cheerio": "^1.2.0",
    "dotenv": "^17.2.3",
    "fastmcp": "^3.30.0",
    "fs-extra": "^11.3.0",
    "glob": "^13.0.0",
    "unpdf": "^1.2.1",
    "zod": "^4.3.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
