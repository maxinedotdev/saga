{
  "name": "@maxinedotdev/saga",
  "version": "1.1.0",
  "description": "A TypeScript MCP server for document management and semantic search with embeddings, featuring web crawling, multiple AI providers, and intelligent chunking",
  "main": "dist/server.js",
  "type": "module",
  "bin": {
    "saga": "dist/server.js"
  },
  "homepage": "https://github.com/maxinedotdev/saga#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxinedotdev/saga"
  },
  "bugs": {
    "url": "https://github.com/maxinedotdev/saga/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/server.js",
      "default": "./dist/server.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json && shx chmod +x dist/*.js",
    "start": "tsx src/server.ts",
    "dev": "fastmcp dev src/server.ts",
    "dev:direct": "npx tsx src/server.ts",
    "dev:build": "npm run build && node dist/server.js",
    "inspect": "npx fastmcp inspect src/server.ts",
    "promote:staging": "./promote-to-staging.sh",
    "switch:develop": "./switch-to-develop.sh",
    "service:install": "./scripts/install-launchagent.sh",
    "service:status": "./scripts/status-launchagent.sh",
    "service:uninstall": "./scripts/uninstall-launchagent.sh",
    "service:install:mac": "./scripts/install-launchagent.sh",
    "service:status:mac": "./scripts/status-launchagent.sh",
    "service:uninstall:mac": "./scripts/uninstall-launchagent.sh",
    "service:install:linux": "./scripts/install-systemd-user.sh",
    "service:status:linux": "./scripts/status-systemd-user.sh",
    "service:uninstall:linux": "./scripts/uninstall-systemd-user.sh",
    "service:install:windows": "powershell -ExecutionPolicy Bypass -File scripts/install-windows-service.ps1",
    "service:status:windows": "powershell -ExecutionPolicy Bypass -File scripts/status-windows-service.ps1",
    "service:uninstall:windows": "powershell -ExecutionPolicy Bypass -File scripts/uninstall-windows-service.ps1",
    "test": "npm run test:all",
    "test:unit": "vitest run src/vector-db/__tests__/ src/__tests__/ src/utils/__tests__/ --exclude '**/integration.test.ts' --exclude '**/query-integration.test.ts' --exclude '**/benchmark.test.ts'",
    "test:integration": "vitest run src/__tests__/integration.test.ts src/__tests__/query-integration.test.ts",
    "test:benchmark": "vitest run src/__tests__/benchmark.test.ts",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "npm run build",
    "db:init": "tsx scripts/init-db-v1.ts",
    "db:drop": "tsx scripts/drop-db.ts",
    "db:benchmark": "tsx scripts/benchmark-db.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "documentation",
    "search",
    "embeddings"
  ],
  "author": "maxinedotdev",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/node": "25.2.2",
    "@types/node-cron": "^3.0.11",
    "@vitest/coverage-v8": "^4.0.18",
    "commander": "^14.0.3",
    "shx": "^0.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "6.1.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@lancedb/lancedb": "0.24.1",
    "@langchain/core": "^1.1.19",
    "@langchain/textsplitters": "^1.0.1",
    "cheerio": "^1.2.0",
    "dotenv": "^17.2.3",
    "eld": "^2.0.2",
    "fastmcp": "3.32.0",
    "fs-extra": "^11.3.0",
    "generic-pool": "^3.9.0",
    "ioredis": "^5.3.2",
    "jose": "5.10.0",
    "node-cron": "^4.2.1",
    "unpdf": "^1.2.1",
    "zod": "^4.3.6"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
